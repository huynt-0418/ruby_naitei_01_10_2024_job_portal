<%= provide(:title, t("enterprise.scout.title")) %>
<h2><%= t "enterprise.scout.title" %></h2>
<div class="d-flex justify-content-between align-items-center mb-4">
  <%= form_with method: :get, url: enterprise_root_path do |f| %>
    <div class="d-flex">
      <%= f.text_field :search, class: "form-control", placeholder: t("enterprise.scout.search_placeholder") %>
      <%= f.submit t("enterprise.scout.search"), class: "btn btn-primary ms-2" %>
    </div>
  <% end %>
  <%= form_with url: enterprise_root_path, method: :get, local: true do %>
    <div class="d-inline-block">
      <label for="sorter"><%= t "enterprise.scout.sort_by" %></label>
      <%= select_tag :sort_by, options_for_select(sort_options, params[:sort_by]), 
      class: "form-select d-inline-block w-auto ms-2", id: "sorter", onchange: "this.form.submit()" %>
    </div>
  <% end %>
</div>

<div class="row">
  <%= render partial: "candidate_card", collection: @candidates, as: :candidate %>
</div>
<div class="float-end">
  <%== pagy_bootstrap_nav @pagy %>
</div>
