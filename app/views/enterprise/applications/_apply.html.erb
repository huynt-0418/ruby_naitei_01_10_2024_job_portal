<div class="col">
  <div class="card shadow-sm h-100">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center mb-2">
        <%= link_to enterprise_application_path(id: apply.id), class: "text-decoration-none text-dark" do %>
          <span class="card-title h5"><%= apply.user.full_name %></span>
        <% end %>
        <div class="badge <%= bootstrap_status_class apply.status %>">
          <%= apply.status.humanize %>
        </div>
      </div>
      <p class="card-text">
        <strong><%= t "enterprise.applications.apply_position" %></strong> <%= link_to apply.job.title, job_path(id: apply.job.id), class: "text-decoration-none" %>
      </p>
      <p class="card-text">
        <strong><%= t "enterprise.applications.apply_time" %></strong> <%= apply.created_at %>
      </p>
    </div>
  </div>
</div>
