<div class="container mt-4">
  <div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between bg-primary text-white">
      <div class="d-flex align-items-center">
        <h3 class="mb-0 me-2"><%= @job.title %></h3>
        <span class="badge bg-info fs-6"><%= @job.status.humanize %></span>
      </div>
      <%= link_to edit_enterprise_job_path(id: @job.id), class: "btn btn-primary me-2" do %>
        <i class="fa-solid fa-edit"></i>
      <% end %>
    </div>
    <div class="card-body">
    <div class="row mb-3">

    <div class="mb-3 col-md-12">
      <h5><%= t "enterprise.recruitment.job_description" %></h5>
      <p><%= simple_format(@job.description) %></p>
    </div>

    <div class="col-md-6">
        <p><strong><%= t "user.apply.location" %></strong> <%= @job.location %></p>
        </div>

        <div class="col-md-6">
          <p><strong><%= t "user.apply.experience" %></strong> <%= @job.experience_level.humanize %></p>
        </div>
        </div>
        
        <div class="row mb-3">
        <div class="col-md-6">
          <p><strong><%= t "user.apply.work_type" %></strong> <%= @job.work_type.humanize %></p>
        </div>

        <div class="col-md-6">
          <p><strong><%= t "user.apply.salary" %></strong> <%= @job.salary_range.present? ? @job.salary_range : "Not specified" %></p>
        </div>
      </div>

      <div class="mb-3">
        <h5><%= t "enterprise.recruitment.required_skills" %></h5>
        <% if @job.required_skills.present? %>
          <ul class>
            <% @job.required_skills.each do |key, value| %>
              <li>
                <strong><%= key.humanize %>:</strong>
                <span class="badge bg-primary"><%= value %></span>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p><%= t "enterprise.recruitment.no_skill" %></p>
        <% end %>
      </div>


    </div>

    <div class="card-footer d-flex justify-content-end">
      <%= link_to t("enterprise.modal.back"), enterprise_jobs_path, class: "btn btn-secondary me-2" %>
      <%= button_to t("enterprise.modal.delete"), enterprise_job_path(id: @job.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this job?" }, class: "btn btn-danger" %>
    </div>
  </div>
</div>
