<% provide :title, t("home.title") %>
<div class="hero-section">
  <h1><%= t "home.hero.title" %></h1>
  <p><%= t "home.hero.subtitle" %></p>
  <%= form_with url: '/jobs', method: :get, local: true do |f| %>
    <%= f.text_field :position, class: "input-search", placeholder: t("home.hero.search_placeholder") %>
    <%= f.select :location, [['Ha Noi', 'hanoi'], ['Da Nang', 'danang'], ['Ho Chi Minh City', 'hochiminh'], ['Others', 'other']], { prompt: t("home.hero.select_city") }, class: "custom-search-select" %>
    <%= f.submit t("home.hero.search_button"), class: "btn-search" %>
  <% end %>
</div>

<div class="latest-featured-jobs row">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="h1"><%= t "home.jobs.title" %></h2>
    <a href="/locations" class="text-primary text-decoration-none d-flex align-items-center">
      <%= t "home.jobs.view_all" %>
      <i class="bi bi-arrow-right ms-2"></i>
    </a>
  </div>
  <div class="job-card col-3">
    <h3>Customer Service</h3>
    <p>Sales, Service, & Support</p>
    <p>Full-Time, New Zealand</p>
    <%= link_to t("home.jobs.apply_now"), "#", class: "btn-apply" %>
  </div>
  <div class="job-card col-3">
    <h3>Full-Stack Developer</h3>
    <p>Engineering & Tech</p>
    <p>Full-Time, Philippines</p>
    <%= link_to t("home.jobs.apply_now"), "#", class: "btn-apply" %>
  </div>
  <div class="job-card col-3">
    <h3>Customer Service</h3>
    <p>Sales, Service, & Support</p>
    <p>Full-Time, New Zealand</p>
    <%= link_to t("home.jobs.apply_now"), "#", class: "btn-apply" %>
  </div>
  <div class="job-card col-3">
    <h3>Full-Stack Developer</h3>
    <p>Engineering & Tech</p>
    <p>Full-Time, Philippines</p>
    <%= link_to t("home.jobs.apply_now"), "#", class: "btn-apply" %>
  </div>
</div>

<div class="mb-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="h1"><%= t "home.companies.title" %></h2>
    <a href="/companies" class="text-primary text-decoration-none d-flex align-items-center">
      <%= t "home.companies.view_all" %>
      <i class="bi bi-arrow-right ms-2"></i>
    </a>
  </div>

  <div class="row g-4">
    <% team_categories = [
      { title: "Innovative and Cutting-edge Technology", description: "Companies that embrace new technologies create an environment where you can grow professionally and work on exciting, impactful projects. Being part of such teams allows you to challenge your skills and be part of the future of technology." },
      { title: "Collaborative and Supportive Culture", description: "A collaborative culture promotes teamwork and open communication. When the team works together toward common goals and supports each other's growth, everyone thrives. It's an environment where learning is continuous, and success is shared." },
      { title: "Opportunities for Professional Growth", description: "Career development is essential for staying motivated and advancing in your career. Companies that offer growth opportunities help you reach your full potential by providing the tools, resources, and mentorship to elevate your skills and knowledge." },
      { title: "Work-Life Balance", description: "Work-life balance is crucial for maintaining mental and physical health while achieving career success. Companies that prioritize this balance offer flexibility and a healthy work environment, which helps keep employees motivated, productive, and satisfied in the long run." }
    ] %>
    <div class="col-md-3">
        <div class="team-img">
          <%= image_tag "team.jpg"%>
        </div>
    </div>
    <div class="col-md-9 row">
      <% team_categories.each do |category| %>
        <div class="col-md-6 mt-4">
          <div class="card h-100 border-1 shadow">
            <div class="card-body">
              <h3 class="card-title text-primary h4"><%= category[:title] %></h3>
              <p class="card-text text-muted"><%= category[:description] %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div>
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="h1"><%= t "home.locations.title" %></h2>
    <a href="/locations" class="text-primary text-decoration-none d-flex align-items-center">
      <%= t "home.locations.view_all" %>
      <i class="bi bi-arrow-right ms-2"></i>
    </a>
  </div>

  <div class="row g-4">
    <% locations = [
      { name: "Hà Nội", jobs: 140, image: "hanoi.jpg" },
      { name: "Đà Nẵn", jobs: 50, image: "danang.jpg" },
      { name: "Hồ Chí Minh", jobs: 12, image: "hcm.jpg" },
      { name: "Oversea", jobs: 4, image: "remote.jpg" }
    ] %>

    <% locations.each do |location| %>
      <div class="col-sm-6 col-md-3">
        <a href="/locations/<%= location[:name].downcase %>" class="text-decoration-none">
          <div class="card location-card ">
            <%= image_tag location[:image], class: "card-img location-img" %>
            <div class="card-img-overlay d-flex flex-column justify-content-end location-overlay">
              <div class="d-flex justify-content-between align-items-end">
                <div class="text-white">
                  <h3 class="h4 mb-1"><%= location[:name] %></h3>
                  <p class="small mb-0"><%= location[:jobs] %> jobs</p>
                </div>
                <i class="bi bi-arrow-right text-white"></i>
              </div>
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</div>
