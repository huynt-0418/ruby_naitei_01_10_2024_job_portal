<%= form_with model: user_project, url: form_url, method: form_method, local: true, class: "row g-3" do |f| %>
  <div class="col-md-12">
    <%= f.label :title, t("user.project.title"), class: "form-label" %>
    <%= f.text_field :title, class: "form-control", required: true %>
  </div>
  <div class="col-md-12">
    <%= f.label :description, t("user.project.description"), class: "form-label" %>
    <%= f.text_area :description, rows: 5, cols: 50, class: "form-control", required: true %>
  </div>
  <div class="col-md-4">
    <%= f.label :role, t("user.project.role_field"), class: "form-label" %>
    <%= f.text_field :role, class: "form-control", required: true %>
  </div>
  <div class="col-md-4">
    <%= f.label :start_date, t("user.project.start_date"), class: "form-label" %>
    <%= f.date_field :start_date, class: "form-control", required: true %>
  </div>
  <div class="col-md-4">
    <%= f.label :end_date, t("user.project.end_date"), class: "form-label" %>
    <%= f.date_field :end_date, class: "form-control", required: true %>
  </div>
  <div data-controller="technology-manager">
    <%= f.hidden_field :technologies_used, value: user_project&.technologies_used&.to_json || "[]", data: { technology_manager_target: "technologies" } %>                  
    <div class="input-group">
      <input type="text" class="form-control" placeholder=<%= t "user.project.add_tech" %> data-technology-manager-target="input">
      <button type="button" class="btn btn-primary" data-action="technology-manager#add"><%= t "user.project.add" %></button>
    </div>
    <div class="mt-2" data-technology-manager-target="list">
    </div>
  </div>  
  <div class="col-12 text-end">
    <%= f.submit t("user.modal.save"), class: "btn btn-primary" %>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><%= t("user.modal.cancel") %></button>
  </div>
<% end %>
